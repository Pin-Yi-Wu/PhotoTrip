<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/plane"
    tools:context="com.phototrip.MainActivity"
    android:padding="20dp">


    <!--android:listSelector="@color/colorGary"-->


    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/add_travel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/plus001"

        fab:fab_size="normal"
        fab:fab_colorNormal="#6ce3df"
        fab:fab_colorPressed="#ffa5c8"
        fab:fab_colorRipple="#ffa5c8"
        android:layout_alignParentBottom="true"
      android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/tv_no_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新增一個旅程吧"
        android:textSize="36sp"
        android:textAlignment="center"
        android:textColor="#f1ebbd"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/colorChar10"
        android:dividerHeight="0.5dp"
        android:id="@+id/listView1"
        android:layout_weight="3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
